pipeline {
    agent {
        label 'linux-agent-2'
    }

    tools {
        maven 'test-maven'
    }

    stages {
        stage('Build-maven-app-agent-2') {
            steps {
                echo 'Building start...'
                sh 'mvn clean package'
                echo 'Building end...'
            }
            post {
                success {
                    echo 'Archiving artifacts'
                    archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
                }
            }
        }

        stage('Test-maven-app') {
            steps {
                echo 'Testing...'
            }
        }

        stage('Deploy-maven-app') {
            steps {
                echo 'Deploying...'
            }
        }
    }
}
